{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2015", "dom"],
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "strict": true,
    "outDir": "./out/"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "out",
  ],
  "compileOnSave": true
}
// no implicit returns
// no explicit any
// strict null checks